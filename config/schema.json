{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://airgap-videowall.local/schemas/platform-config.json",
  "title": "Videowall Platform Configuration",
  "description": "Declarative config for the air-gapped multi-videowall platform.",
  "type": "object",
  "required": ["platform", "walls", "sources"],
  "additionalProperties": false,
  "properties": {
    "platform": {
      "type": "object",
      "required": ["version"],
      "additionalProperties": false,
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "max_concurrent_streams": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1024,
          "default": 64
        },
        "codec_policy": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "tiles": { "type": "string", "enum": ["h264","hevc","av1","vp8","vp9"], "default": "h264" },
            "mosaics": { "type": "string", "enum": ["h264","hevc","av1"], "default": "hevc" }
          }
        },
        "latency_classes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "interactive_max_ms": { "type": "integer", "minimum": 50, "maximum": 5000, "default": 500 },
            "broadcast_max_ms": { "type": "integer", "minimum": 500, "maximum": 30000, "default": 6000 }
          }
        }
      }
    },
    "walls": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9][a-z0-9_-]{0,62}$" },
          "type": { "type": "string", "enum": ["tiles", "bigscreen"] },
          "classification": { "type": "string", "default": "unclassified" },
          "grid": {
            "type": "object",
            "required": ["rows", "cols"],
            "additionalProperties": false,
            "properties": {
              "rows": { "type": "integer", "minimum": 1, "maximum": 20 },
              "cols": { "type": "integer", "minimum": 1, "maximum": 20 }
            }
          },
          "screens": { "type": "integer", "minimum": 1, "maximum": 16, "default": 1 },
          "resolution": { "type": "string", "pattern": "^\\d+x\\d+$", "default": "1920x1080" },
          "latency_class": { "type": "string", "enum": ["interactive","broadcast"], "default": "interactive" },
          "tags": { "type": "object", "additionalProperties": { "type": "string" }, "default": {} }
        },
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "tiles" } }, "required": ["type"] },
            "then": { "required": ["grid"] }
          },
          {
            "if": { "properties": { "type": { "const": "bigscreen" } }, "required": ["type"] },
            "then": { "required": ["screens"] }
          }
        ]
      }
    },
    "sources": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9][a-z0-9_-]{0,62}$" },
          "type": { "type": "string", "enum": ["webrtc","rtsp","srt","rtp"] },
          "endpoint": { "type": "string" },
          "codec": { "type": "string", "enum": ["h264","hevc","av1","vp8","vp9"] },
          "resolution": { "type": "string", "pattern": "^\\d+x\\d+$" },
          "bitrate_kbps": { "type": "integer", "minimum": 100, "maximum": 100000 },
          "tags": { "type": "object", "additionalProperties": { "type": "string" }, "default": {} }
        }
      }
    },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "taxonomy": {
          "type": "object",
          "additionalProperties": { "type": "array", "items": { "type": "string" } }
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "effect"],
            "properties": {
              "id": { "type": "string" },
              "effect": { "type": "string", "enum": ["allow","deny"] },
              "description": { "type": "string" },
              "when": { "type": "object", "additionalProperties": true }
            }
          }
        },
        "allow_list": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "operator_id": { "type": "string" },
              "wall_id": { "type": "string" },
              "source_id": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
